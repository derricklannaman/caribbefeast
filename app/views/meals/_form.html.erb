<!-- NEW / EDIT Partial for meals -->

<div>
  <%= form_for([@destination, @meal]) do |f| %>

    <% if @meal.errors.any? %>
      <div id="error_explanation">
        <h2>
          <%= pluralize(@meal.errors.count, "error") %>
          prevented the meal from being saved:</h2>
        <ul>
          <%= @meal.errors.full_message.each do |msg|%>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class='field'>
      <%= f.label :name, 'Dish' %>
      <%= f.text_field :name %>
    </div>

    <div class='field'>
      <%= f.label :description %><br/>
      <%= f.text_area :description, size: '64x12' %>
    </div>

    <div class='field'>
      <%= f.label :price %><br/>
      <%= f.text_field :price %>
    </div>

    <%= f.submit %>

  <% end %>

</div>