<!DOCTYPE html>
<html>
<head>
  <title>Caribbefeast</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body class='<%= controller.controller_name %>'>

<div>
  <%= render 'shared/navigation' %>
  <%= @page_title || "Caribbefeast" %>
</div>

<% if notice %>
  <p id='notice'><%= notice %></p>
<% end %>

<div class="container">
  <%= yield %>
</div>

<div>
  <%#= render 'shared/admin' %>
</div>

</body>
</html>
